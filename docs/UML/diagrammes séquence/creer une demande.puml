@startuml créer une demande
title Créer une demande\n""__Pré-requis__: L'utilisateur s'est connecté""


actor client as "User" order 1
participant app as "App"   order 2
database bdd as "dataBase:" order 4

client ->> app : HttpRequest()
note left : click on \ncreate ticket
app ->> client : displayEditTicket()

alt pas d'erreur
    client ->> app : HttpRequest()
    note left : le demandeur\nsaisi le informations\nrelatif au ticket
    activate app
    create ticketClass as ":Ticket" order 3
    app -> ticketClass : <<create>>
    app -> ticketClass : saveTicket()
    activate ticketClass
    ticketClass -> bdd : executeQuery()
    activate bdd
    bdd -->> ticketClass : executeQuery():
    deactivate bdd
    ticketClass -->> app : saveTicket():
    deactivate ticketClass
    app ->> client
    deactivate app
else else
    client ->> app : HttpRequest()
    note left : le demandeur\nsaisi le informations\nrelatif au ticket
    activate app
    app ->> client: HttpRequest(): erreur
    deactivate app
end

@enduml